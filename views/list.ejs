<%- include("header") -%>


  <div class="box" id="heading">
    <h1> <%= listTitle %> </h1>
  </div>

  <div class="box">
    <% newListItems.forEach(function(items) { %>
      <form action="/delete" method="post">
        <div class="item">
          <input type="checkbox" name = "deleteItem" value ="<%= items._id%>" onChange = "this.form.submit()">
           <p><%= items.name%></p>
        </div>
      </form>
    <% })  %>


    <form class="item" action="/" method="post">
      <input type="text" name="newItem" placeholder="New Item">
      <button type="submit" name= "listName" value = "<%= listTitle %>">+</button>
    </form>

  </div>


  <%- include("footer") -%>
